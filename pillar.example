---
logstash:
  inputs:
    -
      plugin_name: file
      path:
        - /var/log/syslog
        - /var/log/auth.log
      type: syslog
  filters:
    -
      plugin_name: grok
      cond: 'if [type] == "syslog"'
      match:
        message: '%{SYSLOGTIMESTAMP:syslog_timestamp} %{SYSLOGHOST:syslog_hostname} %{DATA:syslog_program}(?:\[%{POSINT:syslog_pid}\])?: %{GREEDYDATA:syslog_message}'
      add_field:
        received_at: '%{@timestamp}'
        received_from: '%{host}'
    -
      plugin_name: grok
      cond: 'else if [type] == "nginx"'
      match:
        message: '%{IPORHOST:clientip} %{USER:ident} %{USER:auth} \[%{HTTPDATE:timestamp}\] \"(?:%{WORD:verb} %{URIPATHPARAM:request}(?: HTTP/%{NUMBER:httpversion})?|-)\" %{NUMBER:response} (?:%{NUMBER:bytes}|-) \"(?:%{URI:referrer}|-)\" %{QS:agent}'
      add_field:
        received_at: '%{@timestamp}'
        received_from: '%{host}'
    -
      plugin_name: date
      match:
        - 'syslog_timestamp'
        - 'MMM  d HH:mm:ss'
        - 'MMM dd HH:mm:ss'
  outputs:
    -
      plugin_name: lumberjack
      hosts:
        - logs.example.com
      port: 5000
      ssl_certificate: /etc/ssl/certs/lumberjack.crt
  sysconfig:
    JAVACMD: "/usr/bin/java"
    LS_HOME: "/usr/share/logstash"
    LS_SETTINGS_DIR: "/etc/logstash"
    LS_PIDFILE: "/var/run/logstash.pid"
    LS_USER: "logstash"
    LS_GROUP: "logstash"
    LS_GC_LOG_FILE: "/var/log/logstash/gc.log"
    LS_OPEN_FILES: "16384"
    LS_NICE: "19"
    SERVICE_NAME: "logstash"
    SERVICE_DESCRIPTION: "logstash"
  jvm_opts:
    - "-Dfile.encoding=UTF-8"
    - "-Djava.awt.headless=true"
    - "-Xms256m"
    - "-Xmx1g"
    - "-XX:CMSInitiatingOccupancyFraction=75"
    - "-XX:+DisableExplicitGC"
    - "-XX:+HeapDumpOnOutOfMemoryError"
    - "-XX:+UseCMSInitiatingOccupancyOnly"
    - "-XX:+UseConcMarkSweepGC"
    - "-XX:+UseParNewGC"
  config:
    path.config: /etc/logstash/conf.d
    path.data: /var/lib/logstash
    path.logs: /var/log/logstash
    queue.max_bytes: 4gb
    queue.type: persisted
